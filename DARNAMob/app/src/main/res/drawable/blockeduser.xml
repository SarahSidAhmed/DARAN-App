<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
     <item>
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" /> <!-- Shadow color -->
            <corners android:radius="10dp" /> <!-- Corner radius of the shadow -->
        </shape>
    </item>
    <!-- Rectangle -->
    <item android:top="1dp" android:right="1dp" android:left="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" /> <!-- Color of the rectangle -->
            <corners android:radius="10dp" /> <!-- Corner radius of the rectangle -->
        </shape>
    </item>
</layer-list>