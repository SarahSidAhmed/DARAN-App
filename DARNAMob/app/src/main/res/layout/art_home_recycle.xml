<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edit_text_background">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/client_pic"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:paddingStart="10dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/art_demandes" />


            <TextView
                android:id="@+id/client_name"
                android:layout_width="76.68sp"
                android:layout_height="15.78sp"
                android:paddingStart="10dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/productsans_regular"
                android:text="soundous"
                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <ImageView
                android:id="@+id/clock_picture"
                android:layout_width="24.98dp"
                android:layout_height="26.49dp"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="10dp"

                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="72dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/productsans_regular"
                android:text="2 min ago"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/loc_picture"
                android:layout_width="14.56sp"
                android:layout_height="18.57sp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans_regular"
                android:text="Medea"
                android:textColor="@color/black"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:id="@+id/prestation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-300dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="59dp"
                android:fontFamily="@font/productsans_bold"
                android:text="Water heater installation"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                />

            <ImageView
                android:id="@+id/urgent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/urgent"
                />

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans_regular"
                android:text="I am i need of someone to install a water heater in my appartement"
                android:textColor="@color/black"
                android:layout_marginTop="80dp"
                android:layout_marginStart="-250dp"
                android:textSize="16sp"
                />


        </LinearLayout>




</androidx.cardview.widget.CardView>