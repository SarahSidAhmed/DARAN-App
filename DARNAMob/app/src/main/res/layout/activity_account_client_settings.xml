<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.AccountClientSettings">

    <RelativeLayout
        android:id="@+id/upperaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="413dp"
            android:layout_height="140dp"
            android:layout_marginTop="-4dp"
            android:scaleType="fitXY"
            android:src="@drawable/bobble" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|end">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/notif" />

            <LinearLayout
                android:layout_width="398dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/art_address"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_edit_text_background"
                    android:ems="10"
                    android:fontFamily="@font/productsans_regular"
                    android:hint="   Adress..."
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:textColorHint="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@+id/textView10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.241"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintVertical_bias="0.115"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/art_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_edit_text_background"
                    android:ems="10"
                    android:fontFamily="@font/productsans_regular"
                    android:hint="   Phone number..."
                    android:inputType="phone"
                    android:paddingStart="10dp"
                    android:textColorHint="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@+id/textView10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.241"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintVertical_bias="0.115"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center|top"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/artprofilpic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/profil_pic_artisant"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center">
            <ImageView
                android:id="@+id/camera"
                android:layout_width="22dp"
                android:layout_height="19.16dp"
                android:layout_marginTop="145dp"
                android:layout_marginLeft="65dp"
                app:srcCompat="@drawable/camera">

            </ImageView>
        </LinearLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/productsans_bold"
        android:text="save changes"
        android:textSize="13sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="120dp"/>


</RelativeLayout>